# Server Configuration
NODE_ENV=production
PORT=8000
HOST=0.0.0.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_PATH=./firebase-admin-key.json

# TURN Server Configuration
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-credential
TURN_STATIC_SECRET=
# Multiple TURN servers for load-based selection (JSON array or CSV)
# TURN_SERVERS=[{"name":"turn1","host":"1.2.3.4"},{"name":"turn2","host":"5.6.7.8"}]
TURN_SERVERS=turn1=1.2.3.4,turn2=5.6.7.8

# STUN Server Configuration
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Call Configuration
CALL_RING_TIMEOUT=45000
CALL_MAX_DURATION=3600000
CALL_TTL=60

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=*

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000
SOCKET_AUTH_REQUIRED=true
SOCKET_REDIS_ADAPTER_ENABLED=true
SOCKET_STICKY_COOKIE_ENABLED=true
SOCKET_STICKY_COOKIE_NAME=io

